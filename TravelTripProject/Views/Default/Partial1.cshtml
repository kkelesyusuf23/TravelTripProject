@model List<TravelTripProject.Models.Sınıflar.Blog>

<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.BlogImage" style="width:300px; height:150px" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Tarih.ToString("dd:MM:yyyy")</span>
                <p>@item.Description.Substring(0,90)...</p>
                <p><a href="/Blog/BlogDetail/@item.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2","Default")
    
    <div class="clear"></div>
</div>